  "devDependencies": {
    "@azure/identity": "^4.9.1",
    "@azure/keyvault-secrets": "^4.9.0",
    "@eslint/compat": "^1.2.8",
    "@eslint/js": "^9.25.0",
    "@eslint/json": "^0.12.0",
    "@eslint/markdown": "^6.4.0",
    "@faker-js/faker": "^9.7.0",
    "@google-cloud/secret-manager": "^6.0.1",
    "@playwright/test": "^1.51.1",
    "@types/adm-zip": "^0.5.7",
    "@types/argparse": "^2.0.17",
    "@types/node": "^22.14.1",
    "@types/nodemailer": "^6.4.17",
    "@types/rimraf": "^4.0.5",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "adm-zip": "^0.5.16",
    "allure-playwright": "^3.2.1",
    "argparse": "^2.0.1",
    "aws-sdk": "^2.1692.0",
    "axios": "^1.9.0",
    "chance": "^1.1.12",
    "cross-env": "^7.0.3",
    "dotenv": "^16.5.0",
    "eslint": "^9.25.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-jsonc": "^2.20.0",
    "eslint-plugin-playwright": "^2.2.0",
    "eslint-plugin-prettier": "^5.2.6",
    "faker": "^6.6.6",
    "fs-extra": "^11.3.0",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "install": "^0.13.0",
    "lint-staged": "^15.5.1",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "monocart-reporter": "^2.9.18",
    "nodemailer": "^6.10.1",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.30.1",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "scripts": {
    "test": "playwright test",
    "test:smoke": "playwright test --grep @smoke",
    "test:regression": "playwright test --grep @regression",
    "test:sanity": "playwright test --grep @sanity",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:ui:debug": "playwright test --ui --debug",
    "posttest": "npx monocart show-report artifacts/reports/monocart-report/index.html",
    "posttest-allure-disabled": "echo 'Generating Allure Report...' && npm run allure:generate && echo 'Opening Allure Report...' && npm run allure:open",
    "allure:generate": "allure generate --single-file artifacts/reports/allure-results --clean -o artifacts/reports/allure-report",
    "allure:open": "allure open artifacts/reports/allure-report",
    "lint": "eslint . --no-cache",
    "format": "prettier --write */**/*.ts */**/*.json --ignore-pattern ../../.prettierignore",
    "syntax-check": "tsc --noEmit",
    "notify-report:qa": "ts-node ./src/utils/notifications.ts --env qa --email True",
    "notify-report:dev": "ts-node ./src/utils/notifications.ts --env dev --email True",
    "notify-report:staging": "ts-node ./src/utils/notifications.ts --env staging --email True"
  }
}
